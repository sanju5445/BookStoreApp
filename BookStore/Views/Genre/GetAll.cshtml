@model IEnumerable<BookStore.Models.Domain.Genre>

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Genre/Add">Add more</a>
        </div>

    <div class="row">
        <div class="col-md-6">
            <h3>Genres</h3>
            <table class="table table-striped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                       <tr>
                           <td>@item.Name</td>
                           <td>
                               <a class="btn btn-success" href="Update?id=@item.Id">Edit</a>
                                    <a class="btn btn-danger" href="javascript:void(0);" onclick="confirmDelete(@item.Id)">Delete</a>
                                </td>
                       </tr> 
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "This record will be deleted permanently!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel',
                width: '300px', // smaller width
            padding: '0.5rem', // less padding
            customClass: {
                title: 'small-title',
                popup: 'small-popup'
            }
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Genre/Delete?id=' + id;
                }
            });
        }
    </script>

@if (TempData["msg"] != null)
{
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    toast: true,
                    position: 'top-end',
                    icon: 'success',
                    title: '@TempData["msg"]',
                    showConfirmButton: false,
                    timer: 3000,
                    width: '300px',

                });
            });
        </script>
}
    <style>
        /* Make title smaller */
        .small-title {
            font-size: 1rem;
        }

        /* Make popup more compact */
        .small-popup {
            font-size: 0.85rem;
        }
    </style>
